<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/my_gallery"
		android:layout_marginTop="44dp"
		android:layout_marginLeft="24dp"
		android:textSize="18sp"
		android:textColor="@color/blackPrimary"
		app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

	<ImageView
			android:id="@+id/gallerySearchImgV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/search_icon"
			android:layout_marginTop="46.4dp"
			android:layout_marginRight="12dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/galleryMenuImgV"/>

	<ImageView
			android:id="@+id/galleryMenuImgV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/menu_icon"
			android:layout_marginTop="46.4dp"
			android:layout_marginRight="24dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
	<TextView
			android:id="@+id/albumNameTV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/my_photos"
			android:textColor="@color/blackPrimary"
			android:layout_marginTop="16dp"
			android:layout_marginLeft="33dp"
			android:layout_marginBottom="13.6dp"
			/>
	<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/galleryRV"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
	</androidx.recyclerview.widget.RecyclerView>
</LinearLayout>